pipeline {
   agent any
   stages {
       stage('Write File') {
           steps {
               script {
                   def date = new Date()
                   def data =  sh "ls -alh  > ls.txt"
                   writeFile(file: 'ls.txt', text: data)
                   println(date)
                   sh "ls -l"
               }
           }
       }
       stage('Read File') {
           steps {
               script {
                   def data = readFile(file: 'ls.txt')
                   println(data)
               }
           }
       }
   }
}